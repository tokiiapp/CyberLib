<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CyberAds" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="CyberAds" parent="Base.Theme.CyberAds">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="LanguageTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/native_button_color</item>
        <item name="android:fontFamily">@font/minecraft</item>
    </style>

    <style name="LanguageNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/minecraft</item>
    </style>

    <style name="IntroTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/minecraft</item>

    </style>

    <style name="IntroContentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/minecraft</item>
    </style>
